# Local Development Environment Variables
# Copy this file to .env and fill in your actual values

# Local MongoDB Connection String
# For Docker: mongodb://admin:admin123@localhost:27017/recipeapp?authSource=admin
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/recipeapp
MONGODB_URI=mongodb://admin:admin123@localhost:27017/recipeapp?authSource=admin

# OpenAI API Key
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# API Secret Key for mobile app authentication
# Use any secure random string
API_SECRET_KEY=your_api_secret_key_here

# JWT Secret for user authentication tokens
# Use any secure random string (change in production!)
JWT_SECRET=your_jwt_secret_here

# Google Cloud Vision API Key
# Get this from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_VISION_API_KEY=your_google_vision_api_key_here
